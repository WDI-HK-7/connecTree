var app = angular.module('connectree', ['ngRoute']);

app.config(['$routeProvider', '$locationProvider', function($routeProvider, $locationProvider) {
  // Configure Angular Routes
  $routeProvider.
    when('/', {
      templateUrl: "<%= asset_path('static_pages/index.html') %>",
      controller: 'StaticPagesCtrl'
    }).
    when('/login', {
      templateUrl: "<%= asset_path('users/login.html') %>",
      controller: 'LoginCtrl'
    }).
    when('/new_posts', {
      templateUrl: "<%= asset_path('posts/new.html') %>",
      controller: 'PostsNewCtrl'
    }).
    when('/feed', {
      templateUrl: "<%= asset_path('feed/index.html') %>",
      controller: 'FeedCtrl'
    })

    // .
    // otherwise({
    //   redirectTo: '/'
    // });

    // $locationProvider.html5Mode(true);
}]);