<div id="wrapper">
  <div id="sidebar-wrapper">
    <ul class="sidebar-nav">
      <li><%= image_tag('ConneTree_logo.png', class: "img img-responsive") %> </li>
      <li class="sidebar-brand"><a href="#">TreeUpdates</a></li>
      <li><a href="/#/new_posts"> {{ user.name }} </a></li>
      <li><a href="#">QL</a></li>
      <li><button ng-click="form.logout()" ng-controller="LoginCtrl" class="btn btn-xs glyphicon glyphicon-log-out" aria-hidden = "true"></button></li>
    </ul>
  </div>
  <div id="page-content-wrapper">
    <div class="page-content">
      <div class="container">
        <ul class="timeline">
          <li ng-class="$index % 2 == 0 ? '' : 'timeline-inverted'" ng-repeat="post in posts track by $index">
            <div ng-class="$index % 2 == 0 ? 'timeline-badge' : 'timeline-badge warning'"><i class="glyphicon glyphicon-tree-deciduous"></i></div>
            <div class="timeline-panel">
              <div class="timeline-heading">
                <h4 class="timeline-title">{{ post.title }}</h4>
                <p><small class="text-muted"><i class="glyphicon glyphicon-leaf"></i> {{ post.created_at | date:'MMM-dd-yyyy' }}</small></p>
              </div>
              <div class="timeline-body">
                <img ng-src="{{ post.picture }}" ng-click ="picInfo(post.id)" class="img-responsive">
                {{ post.caption }}
              </div>
            </div>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>