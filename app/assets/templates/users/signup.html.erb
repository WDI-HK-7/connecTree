<div class="row">
  <div class ="container log">
    <div class="img-responsive">
      <%= image_tag 'tree-big.png', id: "tree" %>
    </div>
    <h2 class="signup-text">Sign Up</h2> 
    <div class="login col-xs-12">
      <form class="center_div " ng-submit="form.submit()">
        <div class="form-group has-feedback">
          <label class="login-label">Name</label>
          <input class="form-control" placeholder="First Name" ng-model="user.name"> 
          <i class="glyphicon glyphicon-user form-control-feedback glyphicon-override"></i>
        </div>
        <div class="form-group has-feedback">
          <label class="login-label">Email</label>
          <input type="email" class="form-control" placeholder="email" ng-model="user.email"> 
          <i class="glyphicon glyphicon-envelope form-control-feedback glyphicon-override"></i>
        </div>
        <div class="form-group has-feedback">
          <label class="login-label">Password</label>
          <input type="password" class="form-control" placeholder="password" ng-model="user.password">
          <i class="glyphicon glyphicon-lock form-control-feedback glyphicon-override"></i>
        </div>
        <div class="form-group has-feedback">
          <label class="login-label">Confirm Password</label>
          <input type="password" class="form-control" placeholder="password confirmation" ng-model="user.password_confirmation">
          <i class="glyphicon glyphicon-lock form-control-feedback glyphicon-override"></i>
        </div>
        <input type="submit" class="block-center btn btn-default" id="submitBtn"> 
      </form>
      <p class="signup">Returning user? <strong>Login</strong> <a href="#/login">here</a></p>
    </div>
  </div>
</div>