<div class="container" id="boxed">
  <div class="row content">
    <div class="img-responsive">
    <%= image_tag 'tree-big.png', id: "tree" %>
    </div>
    <h1 class="login-text">Login to my Tree</h1>
    <div class="login">
      <form class="center_div " ng-submit="form.submit()">
        <div class="form-group has-feedback">
          <label class="login-label">Email</label>
          <input type="email" class="form-control" placeholder="email" ng-model="user.email" style="font-size= 22px"> 
          <i class="glyphicon glyphicon-envelope form-control-feedback glyphicon-override"></i>
        </div>
        <div class="form-group has-feedback">
          <label class="login-label">Password</label>
          <input type="password" class="form-control" id="input" placeholder="password" style="font-size= 22px" ng-model="user.password">
          <i class="glyphicon glyphicon-lock form-control-feedback glyphicon-override"></i>
        </div>
        <input type="submit" class="block-center btn btn-default" id="loginbtn"> 
      </form>
      <p class="signup">New to the tree? Sign up <a href="#/signup"><bold>here</bold></a></p>
    </div>
  </div>
</div>

