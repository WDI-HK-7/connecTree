<div class="page-content">
  <div class="container col-xs-12" id="timeline-container">
    <h1 id="pageTitle">New Update</h1>
    <br>
    <form ng-submit="form.create()" class="col-xs-12" id="createNewPost">
      <div class="form-group">
        <label class="connectree-labels">Caption Title</label>
        <input type="text" class="form-control" placeholder="Enter title" text-angular ng-model="post.title" text-angular-name="<myEditor>">
      </div>
      <div class="form-group">
        <label class="connectree-labels">Caption</label>
        <textarea type="text" class="form-control" rows="6" placeholder="Update your Tree" ng-model="post.caption"></textarea>
      </div>
      <button class="btn btn-default glyphicon glyphicon-picture" ngf-select ng-model="picture.files" id="upload-panel"> Upload</button>
      <button type="submit" class="btn btn-default pull-right connectree-labels">Submit</button>
      <div class="col-xs-7"> 
        <img ngf-src="picture.files[0]" class="img-responsive image-preview" alt="Placeholder">
      </div>
    </form>
     <ul class="timeline col-xs-12">
      <li ng-class="$index % 2 == 0 ? '' : 'timeline-inverted'" ng-repeat="post in posts track by $index">
        <div ng-class="$index % 2 == 0 ? 'timeline-badge' : 'timeline-badge info'"><i class="glyphicon glyphicon-tree-deciduous"></i></div>
        <div class="timeline-panel" id ="color">
          <div class="timeline-heading">
            <h4 class ="author"><bold>{{ post.user_name }}</bold></h4>
            
            <p><small class="text-muted"><i class="glyphicon glyphicon-leaf"></i> {{ post.created_at | date:'MMM-dd-yyyy' }}</small></p>
          </div>
          <div class="timeline-body">
            <img ng-src="{{ post.picture }}" ng-click ="picInfo(post.id)" class="img-responsive" ng-hide="post.picture == '/pictures/original/missing.png' || post.picture == '' || post.picture == null"><br>

            <h4 class="timeline-title">{{ post.title }}</h4>
            {{ post.caption }}
          </div>
        </div>
      </li>
    </ul>
  </div>
</div>
 

      
    


